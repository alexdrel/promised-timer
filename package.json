{
  "author": "Alex Drel",
  "license": "MIT",
  "name": "ramston-steel-yak-shaving-razor",
  "version": "0.0.1",
  "description": "Boilerplate for TypeScript / WebPack / Karma + Jasmine web project.",
  "main": "build/ramston-steel-yak-shaving-razor.js",
  "typescript": {
    "definition": "build/ramston-steel-yak-shaving-razor.d.ts"
  },
  "engines": {
    "node": "0.12.x || 4.x.x",
    "npm": "2.x.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alexdrel/ramston-steel-yak-shaving-razor"
  },
  "keywords": [
    "boilerplate",
    "scaffolding",
    "typescript",
    "webpack"
  ],
  "scripts": {
    "build": "npm run lint && tsc -p src -d",
    "build:watch": "tsc --watch -p src -d",
    "clean": "rimraf build/ dist/",
    "pack": "webpack -p",
    "pack:watch": "webpack --watch",
    "start": "webpack-dev-server -d --host 0.0.0.0 --port 8088",
    "lint": "tslint src/**/*.ts",
    "test": "karma start --singleRun --browsers Firefox",
    "test:once": "karma start --singleRun",
    "test:watch": "karma start"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jasmine": "^2.2.31",
    "jasmine-core": "^2.4.1",
    "json-loader": "^0.5.4",
    "karma": "1.1.2",
    "karma-chrome-launcher": "1.0.1",
    "karma-firefox-launcher": "1.0.0",
    "karma-jasmine": "1.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.7.0",
    "node-libs-browser": "1.0.0",
    "rimraf": "^2.5.4",
    "ts-loader": "0.8.2",
    "tslint": "^3.14.0",
    "typescript": "^2.0.0",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  }
}
